extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h2.form-login-heading Please log in
        form.form-login(action="/users/login", method="post")
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='Enter your email' name='email')
          div.form-group
            label(for='password') Password:
            input#pw.form-control(type='password' placeholder='Enter your password' name='password')
          button.btn.btn-primary(type='submit') Login