extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h2.display-4.m-b-2 Sign Up
        form(method='POST' action='/users/sign-up')
          div.form-group
            label(for='userName') User Name:
            input#name.form-control(type='text', placeholder='Pick a username' name='userName')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='Your email address' name='email')
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password' placeholder=' Create a password')
          button.btn.btn-primary(type='submit') Sign up